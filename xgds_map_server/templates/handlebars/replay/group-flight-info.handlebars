<form class="bbf-form" id="group-flight-info-form">
<div class="group-flight-info" id="group-flight-info">
	<table>
        <tr>
            <th><label>Name</label></th>
            <td><label id="group-flight-name">{{name}}</label></td>
        </tr>
        <tr>
            <th><label>Notes</label></th>
            <td><textarea id="group-flight-notes" rows=3 >{{notes}}</textarea></td>
        </tr>
        {{#each extras}}
        <tr>
            <th><label>{{@key}}</label></th>
            <td><label id="group-flight-{{@key}}">{{this}}</label></td>
        </tr>
        {{/each}}

	</table>
</div>
</form>